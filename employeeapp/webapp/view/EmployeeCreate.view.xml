<mvc:View controllerName="sapips.training.employeeapp.controller.App"
    xmlns:html="http://www.w3.org/1999/xhtml"
    xmlns:mvc="sap.ui.core.mvc" displayBlock="true"
    xmlns:l="sap.ui.layout"
    xmlns:core="sap.ui.core"  
    xmlns:form="sap.ui.layout.form"
    xmlns="sap.m">
    <App id="app">
     <form:SimpleForm id="idCreateEMP">
    <Panel id="createEMP">
	<List
		headerText="Create Employee" >
		<InputListItem label="Employee ID:">
			<Input value="{oEmployee>EmployeeID}" />
		</InputListItem>
    </List>
    </Panel>
    </form:SimpleForm>
    </App>
</mvc:View>
